    <div class="splash_view">

      <div class="row">
        <div class="col-md-24">
          <h1 class="center">free<span>Day</span></h1>
          <h3 class="center">What day are you free?</h3>
        </div>
      </div>

      <nav>
        <div class="row">
          <div class="col-md-4 col-md-offset-8" id="create_button">
            <a href="#">
              <img src="./images/create_icon.png" onMouseOver="createMouseRollover(this)" onMouseOut="createMouseOut(this)" class= "center-block">
              <h5 class="center">Create an Event</h5>
            </a>
          </div>
        </div>
        <div class="row">
          <div class="col-md-4" id="participate_button">
            <a href="#">
              <img src="./images/join_icon.png" onMouseOver="joinMouseRollover(this)" onMouseOut="joinMouseOut(this)" class= "center-block">
              <h5 class="center">Join an Event</h5>
            </a>
            <select name="which_event" id="which_event_dropdown" class="form-control newFormSelect input-sm">
              <option selected="selected">Select which event</option>
              <option value="event one">Mariachi</option>
            </select>
          </div>
        </div>
      </nav>

    </div>

    <!-- +++++ end of splash_view -->


